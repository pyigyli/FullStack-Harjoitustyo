{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"jsx": "react",
		"lib": ["es2018", "dom"],
		"module": "commonjs",
		"noUnusedLocals": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"target": "ES2016",
		"outDir": "build",
		"strictNullChecks": true,
		"resolveJsonModule": true
	}
}